# Server Configuration
PORT=3000
NODE_ENV=development

# Database
# Connect to SQLite file
DATABASE_URL="file:./dev.db"

# Redis (Optional)
# If not provided or empty, Redis will be disabled (memory-only mode)
REDIS_URL=redis://localhost:6379

# AI Configuration
# Get your API key from OpenAI or Groq
OPENAI_API_KEY=sk-your-api-key-here

# Blockchain APIs (Optional/Defaults available)
# Etherscan API Key for gas prices (Optional but recommended for reliability)
ETHERSCAN_API_KEY=YourEtherscanApiKey

# RPC URLs (Optional - Defaults to public endpoints)
FLARE_RPC_URL=https://flare-api.flare.network/ext/C/rpc
COSTON2_RPC_URL=https://coston2-api.flare.network/ext/C/rpc
